<div>
  <div class="campaignsindex">
    <div class="pull-left featured">
  <h1 class="featuredtext">Featured </br> Campaign</h1>
  <h4 class="signupblue">Cannonball (Original Mix) </br><span class="featuredtext">Fredy & Henrique</span></h4>
  <p>
    <a class="btn btn-info btn-large">
      <i class="fui-facebook"></i> <i class="fui-twitter"></i> share to download
    </a>
  </p></div>
  <ul class="thumbnails pull-right featured">
              <li class="span3 ">
                <a href="#" class="thumbnail">
                  <%= image_tag "artworkexample.jpg" %>
                </a>
              </li>
            </ul>
</div>
  <div class="container">
    <div class="row-fluid">
      <div class="pull-left">
            <div class="btn-group">
              <i class="dropdown-arrow dropdown-arrow-inverse"></i>
              <button class="btn btn-info">Choose Genre</button>
              <button class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu dropdown-inverse">
                <li><%= link_to "All Genres", music_path %></li>
                  <li class="divider"></li>
                  <% Category.all.each do |c| %>
<li>
  <%= form_tag campaigns_path, :method => 'get', :id => "genre_search" do %>
    <%= hidden_field_tag :search, params[:search], value: c.id %>
    <%= submit_tag " #{c.name}", :name => nil, class: "btn-link" %></li>
  <% end %>
<% end %> 
              </ul>
            </div>
            &nbsp
            &nbsp
            <% if current_user %>
              <% if current_user.musician != nil %>
            <%= link_to "<i class='fui-plus'></i> Create a Campaign".html_safe, new_campaign_path, class: "signupblue" %>
            <% else %>
            <%= link_to "<i class='fui-heart'></i> Become a Musician".html_safe, user_settings_path, class: "btn btn-primary btn-large" %>
            <% end %>
            <% end %>
            
      </div>
      <div class="pull-right">
        <div class="btn-group">
              <i class="dropdown-arrow dropdown-arrow-inverse"></i>
              <button class="btn btn-info">Top 25</button>
              <button class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu dropdown-inverse">
                <li><a href="#fakelink">Featured</a></li>
                <li><a href="#fakelink">Newest</a></li>
                <li><a href="#fakelink">Shared</a></li>
              </ul>
            </div>
      </div>
    </div>
    <hr>
   <div class="row-fluid">
      <% @campaigns.in_groups_of(4, false).each do |group| %>
        <ul class="thumbnails">
        <% group.each do |campaign| %>
          <%= render campaign %>
        <% end %>
        </ul>
      <% end %>
    </div>
    <div class="row-fluid">
      <%= will_paginate @campaigns %>
    </div>
  </div>
</div>