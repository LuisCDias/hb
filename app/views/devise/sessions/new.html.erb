<%= content_for(:extra_body_classes, 'background-light sidebar-hidden') %>
<div class="wrap" id="home">
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="content container-fluid">
    <div class="row-fluid">
      <div class="span12 text-align-center well">

        <h1>Login</h1>

      </div>

    </div>
    <div class="row-fluid">
      <div class="span6   text-align-center widget">
        <form class="form-inline">
    <%= f.input :email, :required => true, :autofocus => true%>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, "login", class: "btn btn-info btn-large span6" %>
        
      </div>
      <div class="span6   text-align-center widget">
        <h3></h3>
         <%= link_to user_omniauth_authorize_path(:facebook, origin: music_path) do %>
            <%= image_tag "connectfb.png" %>
          <% end %>
        
          
          
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12 text-align-center well">

        <h3>don't yet have an account</h3>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "signup here", new_registration_path(resource_name), class: "btn btn-large btn-primary" %>
<% end -%>
    

      </div>

    </div>
      

    
  
    

    
  </div>
  <% end %>
  
</div>