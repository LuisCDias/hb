 <div id="hello" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" >
        <div class="modal-header">
          <h3>Sign Up</h3>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="span3">
          
     <%= simple_form_for("user", :url => user_registration_path) do |f|  %>
          <%= f.input :name, placeholder: "Name", label: false, :required => true %></br>
          <%= f.input :email, placeholder: "email", label: false, :required => true  %></br>
          <%= f.input :password, placeholder: "password", label: false, :required => true  %></br>
           <%= f.input :password_confirmation, placeholder: "password confirmation", :required => true, label: false %>
        </div>


          <div class="span3">
            <a href="#fakelink" class="btn btn-small btn-social-facebook">
            <i class="fui-facebook"></i>
            Connect with Facebook
          </a>
          <p></p>
          <a href="#fakelink" class="btn btn-small btn-social-twitter">
            <i class="fui-twitter"></i>
            Connect with Twitter
          </a>
          </div>
          </div>
        </div>
        <div class="modal-footer">

          <%= f.submit "Signup",  class: "btn btn-primary btn-wide" %><% end %>



        </div>
      </div>