<% content_for(:extra_body_classes, 'background-light sidebar-hidden') %>
 <div class="wrap" id="home">
    <div class="content container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <h2 class="page-title pull-left">Dashboard</h2>
          <%= link_to user_settings_path do %>
            <button type="button" class="btn btn-info pull-right"
              data-placement="top" data-original-title=".btn .btn-info .btn-large .pull-right">
              &nbsp;<i class="icon-cog"></i> Account Settings&nbsp;
            </button>
          <% end %>
        </div>
      </div>
      <div class="row-fluid box-row">
        <div class="span2">
          <div class="box">
            <div class="icon">
              <i class="icon-calendar"></i>
            </div>
            <div class="description">
              <strong><%= @lounge.campaign_count %></strong> active campaigns
            </div>
          </div>
        </div>
        <div class="span2">
          <div class="box">
            <div class="big-text">
              <%= @lounge.campaigns.sum { |c| c.playcount } %>
            </div>
            <div class="description">
              <i class="icon-play"></i>
              Total Plays
            </div>
          </div>
        </div>
        <div class="span2">
          <div class="box">
            <div class="big-text">
              <%= @lounge.soundcloud_followers %>
            </div>
            <div class="description">
              <i class="icon-group"></i>
              Soundcloud followers
            </div>
          </div>
        </div>
        <div class="span2">
          <div class="box">
            <div class="big-text">
              <%= @lounge.download_counts %>
            </div>
            <div class="description">
              <i class="icon-download"></i>
              downloads
            </div>
          </div>
        </div>
        <div class="span2">
          <div class="box">
            <div class="big-text">
              pro
            </div>
            <div class="description">
              coming soon
            </div>
          </div>
        </div>
        <div class="span2">
          <div class="box">
            <div class="big-text">
              pro
            </div>
            <div class="description">
              coming soon
            </div>
          </div>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span9 widget hidden-phone">
          <h4 class="pull-left">Campaign Manager</h4>
        </div>
        <div class="span3 widget hidden-phone">
          <%= link_to new_campaign_path do %>
            <button type="submit" class="btn btn-info btn-large btncampaign">New Campaign</button>
          <% end %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span9 widget">
          <div class="body">
          <table id="datatable-table" class="table table-hover">
            <thead>
              <tr>
                <th>Id</th>
                <th>Name</th>
                <th class="no-sort">Artwork</th>
                <th class="hidden-phone-landscape">Requested</th>
                <th class="hidden-phone-landscape">Achieved</th>
                <th>Progress</th>
              </tr>
            </thead>
            <tbody>
            <% @lounge.campaigns.each do |campaign| -%>
              <tr>
                <td><%= campaign.id %></td>
                <td><%= campaign.name %></td>
                <td>
                  <%= link_to campaign.track_permalink, class: 'stratus' do %>
                    <%= image_tag campaign.artwork_for_track,
                      {style: "height: 25px;" } %>
                    <% end %>
                </td>
                <td><%= campaign.requested_likes %></td>
                <td><%= campaign.reserved %></td>
                <td><%= campaign.progress %>%</td>
              </tr>
            <% end -%>
            </tbody>
          </table>
        </div>
      </div>
        <div class="span3">
          <div class="widget">
            <h4>Musician Profile</h4>
            <h5>
              <%= image_tag @lounge.soundcloud_avatar, {style: "height: 25px;"} %>
            </h5>
            <p class="hidden-iphone">
              <%= @lounge.musician_description %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
