<div class="container-fluid dashboard">
      <div class="row-fluid">
        <%= render 'dashboards/menu' %>
        <div class="span10 ">
          <div class="dashboardheader">
            <h4 class="pull-left">Campaign Manager</h4>
            <%= link_to "<span class='fui-plus'></span> Create Campaign".html_safe, new_campaign_path, class: "btn btn-large btn-info pull-right" %>
          </div>
          <div class="row-fluid dashboardmain">
            <table class="table table-striped table-hover">
           
            <tbody>
             
           
<% @lounge.campaigns.each do |campaign| -%>
             
              <tr>

                <td><%= image_tag campaign.artwork_for_track, class: "campaignstableartwork" %></td>
                <td><p class="signupblue"><%= campaign.name %></p><small><%= time_ago_in_words(campaign.created_at) %> ago</small></td>
                <td><small>Downloads</small><p><span class="signupblue">21</span><small>/50</small></p></td>
                <td><small>Plays</small><p class="signupblue">2489</p></td>
                <td>
                    <div class="btn-group">
                    <i class="dropdown-arrow dropdown-arrow-inverse"></i>
                     <button class="btn ">Edit</button>
                      <button class="btn  dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu dropdown-inverse">
                        <li><a href="#fakelink"><i class="fui-chat"></i> share now</a></li>
                        <li><%= link_to campaign_path(campaign),method: :delete,
                    confirm: "This campaign will be deleted, are you sure?" do
                  %>

                  <i class="fui-trash"></i> Destroy<% end %>

                </li>
                      </ul>
                    </div>
                </td>
              </tr>
                <% end -%>
            </tbody>
          </table>
          </div><!--/row-->
        </div><!--/span-->
      </div><!--/row-->

      <hr>


    </div>
